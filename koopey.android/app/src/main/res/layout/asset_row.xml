<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowLocation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_vertical_margin"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFirstItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="centerCrop"
                android:scrollbars="none"
                android:src="@drawable/default_product"></ImageView>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/list_vertical_margin"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="horizontal"
                android:paddingTop="@dimen/label_vertical_margin">

                <TextView
                    android:id="@+id/txtNameItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="left"
                    android:text="My Title"
                    android:textColor="#7f0000"
                    android:textSize="@dimen/font_content_size"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/txtDistanceItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:clickable="false"
                    android:drawableRight="@drawable/ic_place_black_24dp"
                    android:focusable="false"
                    android:gravity="end"
                    android:text="0km"
                    android:textColor="#7f0000"
                    android:textSize="@dimen/font_content_size"
                    android:textStyle="normal"></TextView>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCurrencyItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="left"
                    android:text="Value"
                    android:textColor="#7f0000"
                    android:textSize="@dimen/font_header_size"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/txtValueItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="left"
                    android:text="Value"
                    android:textColor="#7f0000"
                    android:textSize="@dimen/font_header_size"
                    android:textStyle="normal"></TextView>
            </LinearLayout>

        </LinearLayout>

</LinearLayout>